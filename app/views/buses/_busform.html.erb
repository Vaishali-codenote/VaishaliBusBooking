
  <%= form_with model: @bus do |f| %>
    
    <%= f.label :name, "Enter Bus Name" %>
    <%= f.text_field :name %><br>
    <%= f.label :number,"Enter Bus number" %>
    <%= f.text_field :number  %><br>
    <%= f.label :bustype,"Select Bus Type "%>
    <%= f.select :bustype,  ['AC' ,'Non-AC', 'Volvo', 'Sleeper' ,'Semi-sleeper','Luxury'], class: 'form-control', required: true%><br>
    <br>
    <%= f.label :price, "Enter Bus Fare" %>
    <%= f.text_field :price %><br>
    <%= f.label :seats, "Enter Available Seats"%>
    <%= f.text_field :seats %><br>
    <br>
    <%= f.label :pickup,"Enter Pickup Point"%>
    <%= f.text_field :pickup  %><br>
    <%= f.label :drop,"Enter Drop Point"%>
    <%= f.text_field :drop %><br>
    <%= f.label :departure_time,"Enter Departure Time"%>
    <%= f.text_field :departure_time %><br>
    <%= f.label :arrival_time,"Enter Arrival Time"%>
    <%= f.text_field :arrival_time %><br>
    <%= f.submit "Save Bus" %>
    <%= link_to "Back", :back %> <br>
    <br>
  <%end %>
</div>
